@import './variables.styl'

html,
body
  padding 0
  margin 0
  height 100%
  min-height 100%
  background color_gray-light

.content-container
  padding-top 80px

.unlogined
  height 100%
  background url('img/bg.jpg') center center no-repeat
  background-size cover



.clearfix
  *zoom 1
  &:before,
  &:after
    content " "
    display table
  &:after
    clear both
