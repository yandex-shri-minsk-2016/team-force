@import './variables.styl'

html,
body
  padding 0
  margin 0
  height 100%
  min-height 100%
  background color_gray-light

.content-container
  padding-top 80px

.unlogined
  height 100%
  background url('img/bg.jpg') center center no-repeat
  background-size cover

.load-more
  display block
  background rgba(0, 0, 0, 0.05)
  text-align center
  height 4em
  line-height 4em
  margin 1em 0
  &:hover
    text-decoration none
    background rgba(0, 0, 0, 0.1)

.clearfix
  *zoom 1
  &:before,
  &:after
    content " "
    display table
  &:after
    clear both
