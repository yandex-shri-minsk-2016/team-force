#login-buttons-password, #login-buttons-forgot-password
  margin 5px 0 0
  width 100%

.additional-link-container
  display inline-block
  width 100%
  text-align center
  font-size 18px


#login-email-label-and-input,
#login-password-label-and-input
  margin 20px 0
  position relative

.additional-link
  float right
  margin-top 15px
  font-size 14px
  font-weight 500
  color #4D7FA0
  letter-spacing .1px
  text-decoration none
  cursor: pointer
  transition: .3s

#back-to-login-link,
#signup-link
  padding 0

#login-company-label-and-input
  position relative

.login-password-form
  animation fadeIn .5s ease

.gf-
  &popup
    width: 300px;
    margin: 15vh auto 0;
    padding: 17px 30px 20px 30px;
    background: color_white;
    border-radius: 2px;
    position: relative;
    opacity: .98;
    box-sizing: content-box;
    &_logo
      position: absolute;
      top: 74px;
      right: -85px;
      font-size: 32px;
      color: #FFF;
      opacity: .6;
      text-transform: none;
      font-weight: 100;
      transform: rotate(90deg);
  &user-name
    vertical-align: top
