.login-form
  width 300px
  margin 0 auto
  box-sizing border-box
  padding 20px 20px 5px

#login-buttons
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  display flex
  align-items center
  justify-content center
  overflow auto
  z-index 0

#login-buttons-password, #login-buttons-forgot-password
  margin 15px 0 5px
  width 100%

.additional-link-container
  display inline-block
  &:first-child
    float left
  &:last-child
    float right

.header-email
  position absolute
  top 0
  right 20px
  font-size 18px
  z-index 100
  a
    color white
    line-height 70px

#login-dropdown-list
  position relative
  top auto
  left initial

.accounts-dialog
  width auto
  margin 0 auto
  border none
  box-shadow none

.gf-btn-success
  font-weight bold
  padding 15px 0
  background-color gf-green
  border none
  gf-transition(.2s)

.gf-btn-success:hover
  background-color darkness(gf-green, 10%)
  border none

.gf-login
  background-color #F5F5E2

.nav .gf-additional-link
  text-decoration underline
  background-color transparent
  color gf-blue-dark
  font-weight 400
  padding-right 3px
  padding-left 3px

.nav .gf-additional-link:hover
  background-color transparent
  text-decoration none

.gf-logout
  font-weight: 700
  color: white!important
  gf-transition(.2s)
  &:hover
    opacity: .95