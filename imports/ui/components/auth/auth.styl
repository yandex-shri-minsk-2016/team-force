.header-email
  position absolute
  top 0
  right 20px
  font-size 18px
  z-index 100
  a
    color white
    line-height 70px

#login-dropdown-list
  position relative
  top auto
  left initial

.accounts-dialog
  width auto
  margin 0 auto
  border none
  box-shadow none
