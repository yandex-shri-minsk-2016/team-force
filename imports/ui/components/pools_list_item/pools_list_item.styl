.pools-list-item
  align-items center
  border-radius 0 !important
  box-shadow 0 -1px 0 #e5e5e5,0 0 2px rgba(0,0,0,.12),0 2px 4px rgba(0,0,0,.24)
  margin 0 0 1em
  &__time
    font-size 24px
    color color_light_blue
    font-weight 400
    small
      font-size  0.7em
      padding 0.2em
      color color_gray
    @media all and (max-width: 768px)
      small
        display block
  &__shop
    text-align center
    font-size 19px
    color color_dark-red
    font-weight 300
    @media all and (max-width: 768px)
      line-height 80px
  &__owner
    font-size 18px
    color color_default
    text-align right
  &__money
    color color_default
    text-align right
    font-size 18px
  &__users
    text-align right
    font-size 16px
  @media all and (min-width: 768px)
    text-align center
