.pool__header
  line-height 53px
  border-bottom 1px solid color_default
  &_title
    float left
    font-size 36px
    padding-right 40px
    color color_default
  &_posttitle
    float left
    font-size 24px
    color #3193C6
  &_prices
    float right
    font-size 25px
    color color_magic-green
  &_date
    font-size 14px
    line-height 25px
  &_time
    font-size 24px
    line-height 25px
  &_timer
    color color_default
    font-size 16px
    line-height 25px

.items
  list-style none

.item
  text-indent 10px
  background ('/public/dot.png') left no-repeat // @TODOfix me upload dot.png
  &__title
    color color_default
    font-size 18px
    a
      text-decoration none
      border-bottom 1px solid transparent
      &:hover,
      &:active
        border-bottom 1px solid color_default
  &__price
    color color_default
    font-size 16px
  &__count
    color color_gray
    font-size 18px

.gf-hide
  display none

.new-product-input-group--major
  margin 20px 0 30px

.join-button
  padding 0

.gf-
  &map-delivery
    padding 20px 0 0
    font-size 18px
    text-align center
  &pull
    @extend .gf-container
    box-shadow 3px 3px 3px rgba(0,0,0,0.05)
    background color_white
    &__header
      background color_main
      padding 5px 15px
      border-bottom 1px solid #D7D7D7
      &_price
        float right
        font-weight 500
        color color_white
        font-size 22px
        opacity .8
        text-shadow 1px 1px 1px rgba(0,0,0,0.09)
      &_shop-name
        font-weight 500
        color color_white
        font-size 22px
        opacity .8
        text-shadow 1px 1px 1px rgba(0,0,0,0.09)
      &_date
        margin-left 10px
        font-size 16px
        opacity .7
        color color_black
      &_time
        margin-left 5px
        font-size 16px
        font-weight 700
        opacity .7
        color color_black
      &_interval
        margin-left 5px
        font-style oblique
        font-size 16px
        opacity .7
        letter-spacing 0
        color color_black
        &before
          content "("
        &after
          content ")"
    &__body
      padding 20px 15px
    &__form
      border none
      box-shadow none
    &_add
      height auto
      font-size 13px
      width auto
      padding 2px 5px
      float right
      opacity .95
      line-height 13px
    &__wrap-btn
      margin-top 41px
    &_btn-add
      width 300px
      line-height 35px
      height 37px
  &items
    padding 0 0 10px
    border-bottom 1px dashed #bcbcbc
    &_copy-order
      font-size: 20px
    &__owner
      list-style none
      &_name
        font-size 24px
        font-weight 500
        color color_black
        opacity .9
        margin-right 10px
      &_price
        font-size 20px
        font-weight bold
        color #6A95B0
        opacity .9
      &_img-wrap
        border-radius 48%
        overflow hidden
        width 32px
        height 32px
        display inline-block
        vertical-align top
        margin-right 5px
        box-shadow 2px 2px 7px rgba(85,85,85,0.1)
      &_img
        vertical-align top
    &__wrap
      margin 5px 0
  &item
    &_name
      font-size 24px
    &_price
      font-size 18px
    &_quantity
      margin-left 5px
      color color_gray-mid
    &_link
      font-size 20px
      text-decoration none
      color #5C5C5C
      &:hover
        text-decoration underline


@media all and (max-width: width_sm)
  .gf-pull
    &__form
      padding-top: 0
    &_btn-add
      width: 100%
    &__body
      padding-bottom: 0
